@using LoginMVC.Models.ViewModels
@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
        <div class="card-header bg-primary text-white text-center">
            <h3>Sign Up</h3>
        </div>
        <div class="card-body">
            <form asp-action="SignUp" method="post" asp-antiforgery="true">
                <!-- Username -->
                <div class="form-group">
                    <label asp-for="Username" class="form-label font-weight-bold"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label font-weight-bold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label font-weight-bold"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form>
        </div>
        <div class="card-footer text-center">
            <p class="mb-0">
                Already have an account?
                <a asp-controller="Authentication" asp-action="Login" class="text-primary font-weight-bold">Log In</a>
            </p>
        </div>
    </div>
</div>
